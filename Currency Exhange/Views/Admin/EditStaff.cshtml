@model Staff

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Currency Exchange</title>

    <!-- style sheets references -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <!--INSERT CSS FILE HERE-->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- script files references -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>




</head>

<body>


    <div class="container">
        <div class="row">
            <form method="post" action="/Admin/EditStaffPost">
                <div class="form-group row row">
                    <label class="control-label col-2" asp-for="Id">Employee Id : </label>
                    <div class="col-5">
                        <input asp-for="Id" class="form-control" readonly="readonly" />
                    </div>
                </div>


                <div class="form-group row row">
                    <label class="control-label col-2" asp-for="UserId">User Id : </label>
                    <div class="col-5">
                        <input asp-for="UserId" class="form-control" />
                    </div>
                </div>


                @*<div class="form-group row">
            <label class="control-label col-sm-2" asp-for="UserPw">User Password: </label>
            <div class="col-sm-8">
                <input asp-for="UserPw" class="form-control" readonly="readonly"/>
            </div>
        </div>*@

                <div class="form-group row">
                    <label class="control-label col-sm-2" asp-for="FullName">Full Name: </label>
                    <div class="col-sm-8">
                        <input asp-for="FullName" class="form-control" />
                    </div>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label class="control-label col-sm-2" asp-for="Ph_Num">Phone Number: </label>
                    <div class="col-sm-8">
                        <input asp-for="Ph_Num" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" style="margin-left: 200px;" class="btn btn-lg btn-primary" value="Update Staff Details" />
                </div>

                @if (ViewData["Message"] != null)
                {
                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-5">
                            <div class="alert alert-@ViewData["MsgType"]">
                                @ViewData["Message"]
                            </div>
                        </div>
                    </div>
                }
            </form>
        </div>





    </div>

</body>
</html>


